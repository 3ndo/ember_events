<h3>Login</h3>

<form {{action 'login' phone password on='submit'}}>
    <div class="form-group {{if loginPhoneError 'has-error'}}">
        {{input value=phone class='form-control'}}
    </div>
    <div class="form-group {{if loginPasswordError 'has-error'}}">
        {{input value=password type='password' class='form-control'}}
    </div>
    <div class="form-group">
        <button class="btn btn-primary">
            {{#if isProgress}}
                sending..
            {{else}}
                send
            {{/if}}
        </button>
    </div>

    {{#if showLoginError}}
        <div class="form-group">
            <div class="alert alert-danger">{{showLoginError}}</div>
        </div>
    {{/if}}
    {{#if requestError}}
        <div class="form-group">
            <div class="alert alert-danger">{{requestError}}</div>
        </div>
    {{/if}}
</form>